{
  "$schema": "https://opencode.ai/config.json",
  "formatter": false,
  "provider": {
    "llama.cpp": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "llama-server (local)",
      "options": {
        "baseURL": "http://127.0.0.1:8080/v1"
      },
      "models": {
        "gpt-oss-20b": {
          "name": "gpt-oss-20b (local)",
          "limit": {
            "context": 128000,
            "output": 16000
          }
        },
        "devstral-small-2": {
          "name": "Devstral Small 2 (local)",
          "limit": {
            "context": 256000,
            "output": 32000
          }
        }
      }
    }
  }
}
